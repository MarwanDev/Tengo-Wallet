<div class="sign-up-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"field-input", placeholder: "Name" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field-input", placeholder: "Email" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class:"field-input", placeholder: "Password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field-input", placeholder: "Password Confirmation" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"sign-up-btn" %>
    </div>
  <% end %>
</div>
